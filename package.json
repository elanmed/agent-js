{
  "name": "agent",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "bun src/index.ts",
    "test": "bun --test 'src/**/*.test.ts'",
    "lint": "eslint src",
    "types": "tsc",
    "format": "prettier --write .",
    "build-base": "bun build --compile --minify ./src/index.ts",
    "build:linux-x64": "bun run build-base -- --target=bun-linux-x64 --outfile dist/agent-linux-x64",
    "build:linux-arm64": "bun run build-base -- --target=bun-linux-arm64 --outfile dist/agent-linux-arm64",
    "build:darwin-x64": "bun run build-base -- --target=bun-darwin-x64 --outfile dist/agent-darwin-x64",
    "build:darwin-arm64": "bun run build-base -- --target=bun-darwin-arm64 --outfile dist/agent-darwin-arm64",
    "build:windows-x64": "bun run build-base -- --target=bun-windows-x64 --outfile dist/agent-windows-x64",
    "build-all": "bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:darwin-x64 && bun run build:darwin-arm64 && bun run build:windows-x64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "type": "module",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.77.0",
    "globby": "^16.1.1",
    "zod": "^4.3.6"
  }
}
